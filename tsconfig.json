{
  "include": [
    "example/server/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "preserve",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "webworker",
      "dom",
      "es5",
      "es6",
      "es7",
      "es2015.promise",
      "es2017"
    ],
    "sourceMap": true,
    "pretty": true
  }
}
