  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug test",
      "skipFiles": ["<node_internals>/**", "node_modules/**"],
      "runtimeArgs": ["-r", "./.pnp.js", "-r", "./app/doc/script/dev.js"],
      "cwd": "${workspaceFolder}"
    },
    
    {
      "type": "node",
      "request": "launch",
      "name": "Launch via YARN",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "run",
        "--inspect-brk",
        "debug"
      ],
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}