include ../../mixin.pug

div
  article.example-article
    +section('start', '开始使用')
      z-menu(
        :ui='typeUI'
        :theme='typeTheme'
      )
        z-menu-ele(value='1') {{ testName }}
        z-menu-ele(value='2')
          z-btn 按钮
        z-menu-ele(value='3') 测试3
        z-menu-ele(value='4') 测试4
        z-menu-ele(value='5') 测试5
      z-code(:theme='typeTheme').
        #{'<z-menu>'}
          #{'<z-menu-ele value="1">{{ testName }}</z-menu-ele>'}
          #{'<z-menu-ele value="2">'}
            #{'<z-btn>按钮</z-btn>'}
          #{'</z-menu-ele>'}
          #{'<z-menu-ele value="3">测试222</z-menu-ele>'}
          #{'<z-menu-ele value="4">测试3</z-menu-ele>'}
          #{'<z-menu-ele value="5">测试4</z-menu-ele>'}
        #{'</z-menu>'}
    +section('start', '开始使用')
      p.section-description 使用自定义的触发器，并且不遮盖触发器
      z-menu(
        :ui='typeUI'
        :theme='typeTheme'
        noCoverTrig
      )
        z-btn(slot='trigger' type='text') 菜单
        z-menu-ele(value='1') {{ testName }}
        z-menu-ele(value='2')
          z-btn 按钮
        z-menu-ele(value='3') 测试3
        z-menu-ele(value='4') 测试4
        z-menu-ele(value='5') 测试5
      z-code(:theme='typeTheme').
        #{'<z-menu noCoverTrig>'}
          #{'<z-menu-trig slot="trigger"><z-btn type="text" />菜单</z-btn></z-menu-trig>'}
          #{'<z-menu-ele value="1">{{ testName }}</z-menu-ele>'}
          #{'<z-menu-ele value="2">'}
            #{'<z-btn>按钮</z-btn>'}
          #{'</z-menu-ele>'}
          #{'<z-menu-ele value="3">测试222</z-menu-ele>'}
          #{'<z-menu-ele value="4">测试3</z-menu-ele>'}
          #{'<z-menu-ele value="5">测试4</z-menu-ele>'}
        #{'</z-menu>'}
    +section('props', 'props 数据类型')
      z-table(
          border='row'
          auto
          :pageSize='10')
        template(
            slot='thead'
            v-for='item in ["名字", "类型", "可选值", "说明"]')
          z-table-col {{ item }}
        z-table-row(slot='1')
          z-table-col store
          z-table-col Object
          z-table-col ——
          z-table-col 储存实例化的信息
        z-table-row(slot='2')
          z-table-col noCoverTrig
          z-table-col Boolean
          z-table-col ( *false | true )
          z-table-col 菜单展开是不遮挡触发器，TODO： pc 上默认是不遮挡的，mobile 是默认遮挡的
        z-table-row(slot='3')
          z-table-col noTrig
          z-table-col Boolean
          z-table-col ( *false | true )
          z-table-col 不使用组件自带的菜单触发器
        z-table-row(slot='4')
          z-table-col height
          z-table-col String, Number
          z-table-col ——
          z-table-col 菜单高度，1、auto：根据菜单内容的高度，2、数字：输入数字就是自定义的像素高度
        z-table-row(slot='5')
          z-table-col width
          z-table-col String, Number
          z-table-col ——
          z-table-col 菜单宽度，1、auto：根据菜单内容的宽度，2、数字：输入数字就是自定义的像素高度
        z-table-row(slot='6')
          z-table-col trigHeight
          z-table-col String, Number
          z-table-col ——
          z-table-col 菜单触发器的高度，1、auto：根据菜单内容的高度，2、数字：输入数字就是自定义的像素高度