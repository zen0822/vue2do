include ../../mixin.pug

div.component-pop
  article.example-article
    +section('start', '弹窗')
      z-btn(
        :ui='typeUI'
        :theme='typeTheme'
        @click='showPop'
      ) 显示弹出层
      z-btn(
        :ui='typeUI'
        :theme='typeTheme'
        @click='hidePop'
        class='z-css-m-l'
      ) 隐藏弹出层
      z-pop(
        ref='pop'
        direction='north'
        position='left'
      )
        p 这是一个简单
        p {{testName}}
      z-code(:theme='typeTheme').
        #{'<z-btn @click="simple">'}
          确认
        #{'</z-btn>'}
        #{'<z-pop ref="pop" direction="north" position="left">'}
          #{'<p> 这是一个简单</p>'}
          #{'<p> 的小弹窗</p>'}
        #{'</z-pop>'}
    +section('props', 'props 数据类型')
      z-table(
          border='row'
          auto
          :pageSize='10')
        template(
            slot='thead'
            v-for='item in ["名字", "类型", "可选值", "说明"]')
          z-table-col {{ item }}
        z-table-row(slot='1')
          z-table-col direction
          z-table-col string
          z-table-col north | east | west | south
          z-table-col 只有当 position 为 center 生效，弹出方向
        z-table-row(slot='2')
          z-table-col part
          z-table-col boolean
          z-table-col false | true
          z-table-col 在一个父类元素弹出，默认为否即在当前文档之外弹窗
        z-table-row(slot='3')
          z-table-col position
          z-table-col string
          z-table-col top | right | bottom | left | center
          z-table-col 弹出层最终的所在位置
        z-table-row(slot='4')
          z-table-col speed
          z-table-col string
          z-table-col slow | normal | fast
          z-table-col 弹出速度
        z-table-row(slot='5')
          z-table-col type
          z-table-col string
          z-table-col *slide | bounce
          z-table-col 弹出类型
    +section('events', 'events 组件事件')
      z-table(
          border='row'
          auto
          :pageSize='10')
        template(
            slot='thead'
            v-for='item in ["名字", "返回值类型", "说明"]')
          z-table-col {{ item }}
        z-table-row(slot='1')
          z-table-col show
          z-table-col Object
          z-table-col
            p 以下的为返回值说明
            ul
             li emitter - 派送事件的组件上下文
        z-table-row(slot='2')
          z-table-col hide
          z-table-col Object
          z-table-col
            p 以下的为返回值说明
            ul
             li emitter - 派送事件的组件上下文
    +section('slots', 'slots 内容分发')
      z-table(
          border='row'
          auto
          :pageSize='10')
        template(
            slot='thead'
            v-for='item in ["名字", "说明"]')
          z-table-col {{ item }}
        z-table-row(slot='1')
          z-table-col —— (default)
          z-table-col 弹出层的主体内容
