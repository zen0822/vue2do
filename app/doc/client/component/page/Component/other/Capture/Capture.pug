include ../../mixin.pug

div
  article.example-article
    +section('start', '开始使用')
      z-capture(
        ref='capture'
        :width='windowWidth'
        :height='windowHeight'
        @change='captureChange'
      )

      z-btn(
        value='打开摄像头'
        @click='startCamera'
      )

      div(class='z-css-m-t')
        img(:src='photoData' width='100%')

      z-code.
        #{'<'}z-omit :line="4" :style="{width: '300px'}"#{'>'}

        #{'</z-omit>'}
    +section('props', 'props 数据类型')
      z-table(
          border='row'
          auto
          :pageSize='10')
        template(
            slot='thead'
            v-for='(item, index) in ["名字", "类型", "可选值", "说明"]')
          z-table-col(:max-width='index === 3 ? "23px" : ""') {{ item }}
        z-table-row(slot='1')
          z-table-col width
          z-table-col Number
          z-table-col -
          z-table-col 照片宽度，默认是 300