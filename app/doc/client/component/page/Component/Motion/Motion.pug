include ../mixin.pug

div.component-transition
  router-view

  article.example-article
    +section('transitionProps', '公共的 props')
      z-table(
          border='row'
          auto
          :pageSize='10')
        template(
            slot='thead'
            v-for='item in ["名字", "类型", "可选值", "说明"]')
          z-table-col {{ item }}
        z-table-row(slot='1')
          z-table-col display
          z-table-col boolean
          z-table-col *false | true
          z-table-col 默认一开始是隐藏（进来之前的状态）
        z-table-row(slot='2')
          z-table-col speed
          z-table-col string
          z-table-col slow | *normal | fast
          z-table-col 过渡的速度
        z-table-row(slot='3')
          z-table-col sync
          z-table-col Boolean
          z-table-col *false | true
          z-table-col 调用多次动画时，动画与动画之间是否时同步
    +section('transitionProps', '公共的 event')
      z-table(
          border='row'
          auto
          :pageSize='10')
        template(
            slot='thead'
            v-for='item in ["名字", "返回值类型", "说明"]')
          z-table-col {{ item }}
        z-table-row(slot='1')
          z-table-col beforeEnter
          z-table-col Object
          z-table-col
            p 进来过渡之前
            p 以下的为返回值说明
            ul
              li emitter - 派送事件的组件上下文
        z-table-row(slot='2')
          z-table-col enter
          z-table-col Object
          z-table-col
            p 进来过渡期间
            p 以下的为返回值说明
            ul
              li emitter - 派送事件的组件上下文
        z-table-row(slot='2')
          z-table-col afterEnter
          z-table-col Object
          z-table-col
            p 进来过渡完成
            p 以下的为返回值说明
            ul
              li emitter - 派送事件的组件上下文
