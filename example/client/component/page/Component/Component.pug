div.p-component
  z-row(:gap='30', align='start')
    z-col.p-component-menu(
      :style='componentStyle'
    )
      z-nav(
        type='vertical'
        title='组件导航'
        trigger='show'
        spread-all
        :init-opt='menuOpt'
        :ui='typeUI'
        :theme='typeTheme'
      )
    z-col.p-component-stage(
      :style='componentStyle'
      ref='compStage'
    )
      transition(name='z-fade', v-on:after-enter='afterEnter')
        div
          z-row.z-css-m-b-double.p-component-menu-container(justify='justify')
            z-col
              span.z-css-vertical-middle UI:
              z-select.p-component-menu-select(
                :value='typeUI'
                ref='ui'
                menuWidth='100%'
              )
                z-select-ele(value='bootstrap') Bootstrap4
                z-select-ele(value='material') Material
            z-col
              span.z-css-vertical-middle Theme:
              z-select.p-component-menu-select(
                :value='typeTheme'
                ref='theme'
                menuWidth='100%'
              )
                z-select-ele(value='primary') Primary
                z-select-ele(value='danger') Danger
                z-select-ele(value='success') Success
                z-select-ele(value='warning') Warning
                z-select-ele(value='orange') Orange
                z-select-ele(value='grey') Grey
                z-select-ele(value='light') Light
                z-select-ele(value='dark') Dark
          router-view