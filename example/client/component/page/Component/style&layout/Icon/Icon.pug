include ../../mixin.pug

div
  article.example-article
    +section('start', '开始使用')

      z-icon(kind='github' size='L')
      z-code(:theme='typeTheme').
        #{'<z-icon kind="github" size="L"></z-icon>'}
    +section('props', 'props 数据类型')
      z-table(
          border='row'
          auto
          :pageSize='10')
        template(
            slot='thead'
            v-for='(item, index) in ["名字", "类型", "可选值", "说明"]')
          z-table-col(:max-width='index === 3 ? "30%" : ""') {{ item }}
        z-table-row(slot='1')
          z-table-col size
          z-table-col String
          z-table-col (*xs | s | m | l | xl)
          z-table-col.
            图标尺寸
        z-table-row(slot='2')
          z-table-col type
          z-table-col String
          z-table-col （fa | ali | *)
          z-table-col
            p 字符图标类型
            ul
              li ali：默认值，vue2do 自带的 iconfont 图标
              li fa：内置的 fontawesome 的图标配置，但是需要自己加载 fontawesome 文件
              li 自定义，用户自己加载 alimama 的 iconfont 文件进来，根据用户配置的图标前缀
        z-table-row(slot='3')
          z-table-col kind
          z-table-col String
          z-table-col *
          z-table-col.
            图标的种类（ex：fa-circle -> kind='circle'，ali-fold -> kind='fold')